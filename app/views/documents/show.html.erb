<div class="page-header">
  <h1> 
    <%= @document.name %>
  </h1> 
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    タイトル
  </div>

  <div class="panel-body">
    <%= @document.name %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    URL
  </div>

  <div class="panel-body">
    <%= @document.url %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    本文
  </div>

  <div class="panel-body">
    <%= @document.body %>
  </div>
  <div class="col-md-4">
  <% if @document.created_by?(current_user) %>
    <%= link_to 'ドキュメントを編集する', edit_document_path(@document), class: 'btn btn-info btn-sm btn-block' %>
    <%= link_to 'ドキュメントを削除する', document_path(@document), class: 'btn btn-danger btn- btn-block', method: :delete, data: {confirm: '本当に削除しますか？'} %>
  <% end %>
  </div>
</div>

